#include <cmath>

class PriorityQueue {
    vector<int> pq;
    
    public :
    
    PriorityQueue() {
        
    }
    
    bool isEmpty() {
        return pq.size() == 0;
    }
    
    // Return the size of priorityQueue - no of elements present
    int getSize() {
        return pq.size();
    }
    
    int getMin() {
        if(isEmpty()) {
            return 0;		// Priority Queue is empty
        }
        return pq[0];
    }
    
    void insert(int element) {
        pq.push_back(element);
        
        int ci = pq.size() - 1;
        int pi = (ci - 1) / 2;
            
       
           
            while(pi>=0 && pq[ci] < pq[pi]  ) {
                int temp = pq[ci];
                pq[ci] = pq[pi];
                pq[pi] = temp;
                
                
                ci=pi;
                pi=(ci-1)/2;
            }

            
        
        
    }
    
